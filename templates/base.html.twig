<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}"
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <header>
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start bg-dark bg-gradient pb-1 mb-1">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                </a>
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="{{ path('offers') }}" class="text-white nav-link px-2 link-secondary">Home</a></li>
                    <li><a href="{{ path('companies') }}" class="text-white nav-link px-2 link-secondary">Companies</a></li>
                </ul>
                <div class="dropdown text-end">
                    <a href="#" class=".bg-light.bg-gradient d-block link-secondary text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/59/User-avatar.svg/1200px-User-avatar.svg.png" alt="mdo" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu text-small">
                        <li><a class="dropdown-item" href="{{ path('users') }}">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            </div>
            </header>

            <main role="main" class="container">
                {% block body %}{% endblock %}
            </main>

            <footer class="page-footer fixed-bottom font-small bg-gradient">
                <ul class="nav justify-content-center border-bottom pb-1 mb-1">
                    <li class="nav-item"><a href="{{ path('offers') }}" class="text-white nav-link px-2 link-secondary">Home</a></li>
                    <li class="nav-item"><a href="{{ path('companies') }}" class="text-white nav-link px-2 link-secondary">Companies</a></li>
                </ul>
                <p class="text-center text-muted">Â© 2022 Company, Inc</p>
            </footer>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    </body>
</html>
