{% extends 'base.html.twig' %}

{% block title %}CompaniesController!{% endblock %}

{% block body %}
    <div class="container d-flex flex-wrap align-items-center">
        {% for comp in companies %}
            <div class="m-2 card" style="width:300px">
                <img width="230" height="172" class="card-img-top" src= "  {{ comp.photo }} "  alt="Card image">
                <div class="card-img-overlay">
                    <h4 class="card-title">{{ comp.name }}</h4>
                    <p class="card-text">{{ comp.description }}.</p>
                    <a href="#" class="btn btn-primary">Details</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
